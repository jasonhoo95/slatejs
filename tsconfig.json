{
   "compilerOptions": {
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"],
         "@/public/*": ["./public/*"]
      },
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "checkJs": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"]
   },
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "src/pages/_document.jsx"
   ],
   "exclude": ["node_modules"]
}
